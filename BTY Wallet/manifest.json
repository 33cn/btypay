{
  "name": "develop",
  "description": "比特元浏览器插件test",
  "version": "0.0.1",
  "browser_action": {
    "default_popup": "dist/index.html",
    "default_icon": "icons/novacoin-32.png"
  },
  "icons": {
    "16": "icons/novacoin-16.png",
    "32": "icons/novacoin-32.png",
    "48": "icons/novacoin-48.png",
    "128": "icons/novacoin-128.png"
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "permissions": [
    "storage"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["contentScript.js"],
      "run_at": "document_start"
    }
  ],
  "web_accessible_resources": ["inpage.js"],
  "externally_connectable": {
    "ids": [
      "*"
    ],
    "matches": [
      "http://47.74.190.154:*/*",
      "https://*.biqianbao.net/*",
      "http://localhost:*/*",
      "http://127.0.0.1:*/*"
    ]
  },
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
  "manifest_version": 2
}